<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#CCCCCC" />
            <gradient android:angle="-90" android:startColor="#ffacacac" android:endColor="#ffffffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffcccccc" />
            <solid android:color="#ffa3a3a3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffcccccc" />
            <gradient android:angle="-90" android:startColor="#ffdfdfdf" android:endColor="#ff9b9b9b" />
        </shape>
    </item>
</selector>